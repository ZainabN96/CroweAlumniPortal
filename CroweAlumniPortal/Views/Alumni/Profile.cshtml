    ViewData["Title"] = "Profile";
}

 <div class="new-top-bar"></div>

    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 new-custom-sidebar">
          <div class="new-sidebar-box">
            <div class="new-sidebar">
              <a href="#" class="new-active" data-section="photo">Profile photo</a>
              <a href="#" data-section="basic">Basic details</a>
              <a href="#" data-section="contact">Contact details</a>
              <a href="#" data-section="other">Other details</a>
