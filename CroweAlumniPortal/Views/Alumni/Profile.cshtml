                  <span class="new-edit-icon text-primary" id="editBtn">✏️</span>
                  <p id="displayEnrollment"></p>
                  <p id="displayProgram"></p>
                  <p id="displayYears"></p>
                  <button class="btn btn-light btn-sm">Alumni</button>
                </div>
              </div>
            </div>
