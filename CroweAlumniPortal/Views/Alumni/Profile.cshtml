        <!-- Content Area -->
        <div class="col-md-9 new-custom-content">
          <div class="new-content-box">
            <!-- Profile Photo -->
            <div id="photo" class="new-content-section new-active text-center">
              <h4>Edit profile photo</h4>
                    <img id="profilePhoto" src="~/assets/img/person.png" alt="Profile" class="new-profile-photo mb-3">
              <div class="d-flex justify-content-center align-items-center">
                <input type="file" id="photoInput" accept="image/*" hidden />
                <button class="btn new-btn-primary btn-sm me-2" id="btnChangePhoto">Change Photo</button>

                @* <button class="btn new-btn-primary btn-sm me-2">Change Photo</button> *@
                <div class="new-menu-container">
                  <button class="btn btn-outline- btn-sm" id="menuBtn">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  <div class="new-menu" id="menuDropdown">
                    <a href="#">Delete Photo</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Basic Details -->
            <div id="basic" class="new-content-section">
              <h4 class="mb-1 fw-semibold">Edit basic details</h4>
              <p class="text-muted small mb-4">Fields marked <span class="text-danger">*</span> are mandatory</p>
              <form class="new-mt-3">
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label class="form-label">First Name <span class="text-danger">*</span></label>
                    <input type="text" class="new-form-control">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="new-form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label class="form-label">Date of Birth <span class="text-danger">*</span></label>
                    <input type="date" class="new-form-control">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Current City <span class="text-danger">*</span></label>
                    <input type="text" class="new-form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label class="form-label">Gender</label>
                    <select class="new-form-select">
                      <option selected>Female</option>
                      <option>Male</option>
                      <option>Other</option>
                    </select>
                  </div>
                </div>
                <div class="mb-4">
                  <label class="form-label">About you</label>
                  <textarea class="new-form-control" rows="2" placeholder="Tell your network about what you do"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                  <button type="button" class="btn btn-outline-secondary me-2">Cancel</button>
                  <button type="submit" class="btn new-btn-primary">Save changes</button>
                </div>
              </form>
            </div>

            <!-- Contact Details -->
            <div id="contact" class="new-content-section">
              <h4 class="mb-1 fw-semibold">Edit contact details</h4>
              <p class="text-muted small mb-4">Fields marked <span class="text-danger">*</span> are mandatory</p>
              <div class="mb-3">
                <label class="form-label">Email <span class="text-danger">*</span></label>
                <div class="d-flex gap-3">
                  <input type="email" class="new-form-control">
                  <a href="#" class="new-add-link">+ Add alternate email</a>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label">Phone No <span class="text-danger">*</span></label>
                <div class="d-flex align-items-center gap-3">
                  <select class="new-form-select w-auto mb-4" style="line-height: 1.5;">
                    <option selected> +91</option>
                    <option> +92</option>
                    <option>  +1</option>
                  </select>
                  <input type="tel" class="new-form-control">
                  <a href="#" class="new-add-link" style="display: inline-flex; align-items: center; height: 38px;">
                    + Add another phone no.
                  </a>
                </div>
              </div>
              <h6 class="fw-semibold new-mt-4">Social Profiles</h6>
              <div class="mb-4">
                <label class="form-label">LinkedIn Profile Url</label>
                <input type="url" class="new-form-control">
              </div>
              <hr>
              <h6 class="fw-semibold">Addresses</h6>
              <p class="mb-1 fw-medium">Current residence</p>
              <div class="mb-3">
                <label class="form-label">Current residence address</label>
                <textarea class="new-form-control" rows="2"></textarea>
              </div>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">City</label>
                  <input type="text" class="new-form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Zip-code</label>
                  <input type="text" class="new-form-control">
                </div>
              </div>
              <div class="mb-4">
                <a href="#" class="new-add-link">+ Add Office Address</a><br>
                <a href="#" class="new-add-link">+ Add Permanent Address</a>
              </div>
              <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-outline-secondary">Cancel</button>
                <button class="btn new-btn-primary">Save changes</button>
              </div>
            </div>

            <!-- Other Details -->
            <div id="other" class="new-content-section">
              <h4 class="mb-1 fw-semibold">Other details</h4>
              <p class="text-muted small mb-4">Fields marked <span class="text-danger">*</span> are mandatory</p>
              <div class="mb-4">
                <label class="form-label fw-semibold">Current Salary Range</label>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">300,000 to 400,000 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">250,000 to 299,999 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">200,000 to 249,999 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">150,000 to 199,999 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">100,000 to 149,999 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">50,000 to 99,999 PKR</label></div>
                <div class="new-form-check"><input class="form-check-input" type="checkbox"><label class="form-check-label">0 to 49,999 PKR</label></div>
              </div>
              <div class="mb-4">
                <label class="form-label">Designation <span class="text-danger">*</span></label>
                <input type="text" class="new-form-control" placeholder="Designation">
              </div>
              <h6 class="fw-semibold new-mt-4">Expertise Details</h6>
              <label class="form-label">Add Skills</label>
              <input type="text" id="skillInput" class="new-form-control" placeholder="Type a skill and press Enter">
              <div id="skillsContainer" class="new-mt-3 d-flex flex-wrap gap-2"></div>
              <div class="d-flex justify-content-end gap-2 new-mt-4">
                <button class="btn btn-outline-secondary">Cancel</button>
                <button class="btn new-btn-primary">Save changes</button>
              </div>
            </div>

